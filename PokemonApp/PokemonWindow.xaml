<Window x:Class="PokemonApp.PokemonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonApp"
        mc:Ignorable="d"
        Title="PokemonWindow" Height="450" Width="450" WindowStartupLocation="CenterScreen">
    <Grid x:Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="195" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="195" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="150" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>



        <Image Width="100" Height="100" Grid.Column="1" Grid.Row="0" Source="https://img.pokemondb.net/sprites/omega-ruby-alpha-sapphire/dex/normal/bulbasaur.png"></Image>
        <Image x:Name="SecondImage" Width="100" Height="100" Grid.Column="3" Grid.Row="0"></Image>
        <Button Width="100" Height="50" Grid.Column="1" Grid.Row="1" Click="Button_Click">Test</Button>



    </Grid>
</Window>
